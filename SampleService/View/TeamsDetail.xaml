<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleService.View.TeamsDetail"
             xmlns:viewmodel="clr-namespace:SampleService.ViewModel"
             x:DataType="viewmodel:TeamDetailViewModel"
             Title="TeamsDetail">
    <VerticalStackLayout>
        <Label 
            Text="Team Detail"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="ID"></Label>
        <Label Text="{Binding Team.id}"></Label>
        <Label Text="Name"></Label>
        <Label Text="{Binding Team.name}"></Label>
        <Label Text="Locatio"></Label>
        <Label Text="{Binding Team.location}"></Label>
        <Label Text="Members"></Label>
        <Label Text="{Binding Team.teamMembers}"></Label>
    </VerticalStackLayout>
</ContentPage>